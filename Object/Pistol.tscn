script/source = "extends Area2D

var bullet_scene = preload(\"res://Object/Bullet.tscn\")
var canShoot = true
var magazine = 7
var clip = magazine
var taken = false
var player

func _ready():
	get_node(\"ShootTime\").wait_time = 0.1
	get_node(\"ReloadTime\").wait_time = 3
	set_process(true)
	pass

func _process(delta):
	if taken:
		get_parent().remove_child(self)
		player.add_weapon(self)
	pass

func shoot():
	if(clip > 0):
		if(canShoot):
			canShoot = false
			var b = bullet_scene.instance()
			get_tree().get_root().add_child(b)
			b.global_position = get_node(\"ShotPos\").global_position
			clip -= 1
			get_node(\"ShootTime\").start()
	else:
		get_node(\"ReloadTime\").start()
	pass


func _on_ShootTime_timeout():
	canShoot = true
	pass # replace with function body


func _on_ReloadTime_timeout():
	clip = magazine
	pass # replace with function body


func _on_Pistol_body_entered( body ):
	if body.is_in_group(\"player\"):
		player = body
		taken = true
	pass # replace with function body
