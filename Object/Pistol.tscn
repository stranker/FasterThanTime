	get_node(\"ReloadTime\").wait_time = 1.5
	set_process(true)
	set_magazine(7)
	set_clip(get_magazine())
	set_texture(get_node(\"Pistol\").texture)
	set_accuracy(20)
	pass

func _process(delta):
	if get_taken():
		get_parent().remove_child(self)
		get_player().add_weapon(self)
	pass

func shoot():
	if(get_clip() > 0):
		if(get_canShoot()):
			set_canShoot(false)
			get_node(\"AnimationPlayer\").play(\"shooting\")
			var b = bullet_scene.instance()
			get_tree().get_root().add_child(b)
			b.spray = get_accuracy()
			b.global_position = get_node(\"ShotPos\").global_position
			set_clip(get_clip()-1)
			get_node(\"ShootTime\").start()
			get_node(\"ReloadTime\").stop()
			if(get_clip() == 0):
				reload()
	else:
		reload()
	pass


func reload():
	get_node(\"ReloadTime\").start()

