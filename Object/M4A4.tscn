var bullet_scene = preload(\"res://Object/Bullet.tscn\")

func _ready():
	get_node(\"ShootTimer\").wait_time = 0.05
	get_node(\"ReloadTimer\").wait_time = 2
	set_process(true)
	set_magazine(30)
	set_clip(get_magazine())
	set_texture(get_node(\"Sprite\").texture)
	set_accuracy(30)
	pass

func _process(delta):
	if get_taken():
		get_parent().remove_child(self)
		get_player().add_weapon(self)
		set_process(false)
	pass

func shoot():
	if(get_clip() > 0):
		if(get_canShoot()):
			set_canShoot(false)
			get_node(\"AnimationPlayer\").play(\"shooting\")
			var b = bullet_scene.instance()
			b.spray = get_accuracy()
			get_tree().get_root().add_child(b)
			b.global_position = get_node(\"ShootPos\").global_position
			set_clip(get_clip()-1)
			get_node(\"ShootTimer\").start()
			get_node(\"ReloadTimer\").stop()
			if(get_clip() == 0):
				reload()
	else:
		reload()
	pass


func reload():
	get_node(\"ReloadTimer\").start()

func _on_ShootTimer_timeout():
	set_canShoot(true)
	pass # replace with function body


func _on_ReloadTimer_timeout():
	set_clip(get_magazine())
	pass # replace with function body


func _on_M4A4_body_entered( body ):
	if body.is_in_group(\"player\") and !get_taken():
		set_player(body)
		set_taken(true)
	pass # replace with function body

func stop_reload():
	get_node(\"ReloadTimer\").stop()

func disappear():
	get_node(\"AnimationPlayer\").play_backwards(\"appear\")
	get_node(\"ReloadTimer\").stop()
	pass

func appear():
	get_node(\"AnimationPlayer\").play(\"appear\")
	pass"

