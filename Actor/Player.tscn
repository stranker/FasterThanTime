resource_name = "Player.gd"
script/source = "extends KinematicBody2D

const GRAVITY = 1400
var velocity = Vector2()
var FLOOR_SPEED = 200
var AIR_SPEED = 150
var JUMP = 500
var curr_weapon = 0
var weapons = []

func _ready():
	set_physics_process(true)
	set_process_input(true)
	set_process(true)
	pass

func _process(delta):
	set_weapon()
	pass

func _physics_process(delta):
	move(delta)
	pass

func set_weapon():
	if !weapons.empty():
		weapons[curr_weapon].global_position = get_node(\"GunPos\").global_position
		get_node(\"GUI/H/Weapon\").texture = weapons[curr_weapon].get_texture()
		get_node(\"GUI/H/Label\").text = str(weapons[curr_weapon].clip)+\"/\"+str(weapons[curr_weapon].magazine)
	pass

func move(delta):
	#GRAVITY
	velocity.y += GRAVITY*delta
	velocity.y = clamp(velocity.y,-JUMP,GRAVITY/2)
	#MOVEMENT
	if is_on_floor():
		velocity.x = FLOOR_SPEED
	else:
		velocity.x = AIR_SPEED
	move_and_slide(velocity,Vector2(0,-1))
	pass

func _input(event):
	#JUMP
	if (event.is_action(\"ui_up\") and event.is_pressed() and !event.is_echo() and is_on_floor()):
		velocity.y = -JUMP
	if (event.is_action(\"shoot\") and event.is_pressed() and !weapons.empty()):
		weapons[curr_weapon].shoot()
	if (event.is_action(\"reload\") and event.is_pressed() and !weapons.empty()):
		weapons[curr_weapon].reload()
	pass

func add_weapon(weap):
	weapons.append(weap)
	get_node(\"GunPos\").add_child(weap)
	pass"

